<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dip">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <ImageView
            android:id="@+id/fragment_main_item_image"
            android:layout_width="70dip"
            android:layout_height="70dip"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true" />

        <TextView
            android:id="@+id/fragment_main_item_website"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:paddingTop="1dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/fragment_main_item_image"
            android:textColor="@color/categoryArticle"
            android:textSize="13sp"
            android:textStyle="bold"
            android:text="Category > Test"/>

        <TextView
            android:id="@+id/fragment_main_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:paddingBottom="1dp"
            android:layout_alignBottom="@+id/fragment_main_item_image"
            android:layout_toEndOf="@+id/fragment_main_item_image"
            android:textColor="@color/titleArticle"
            android:textSize="22sp"
            android:text="Testblabla"/>

        <TextView
            android:id="@+id/fragment_main_item_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="1dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:textColor="@color/dateArticle"
            android:textSize="13sp"
            android:text="09/08/18"/>

    </RelativeLayout>

</LinearLayout>