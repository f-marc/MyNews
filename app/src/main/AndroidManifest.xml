<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.fleury.marc.mynews">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- MainActivity -->
        <activity android:name=".controllers.activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- CategoryActivity -->
        <activity
            android:name=".controllers.activities.CategoryActivity"
            android:parentActivityName=".controllers.activities.MainActivity" />

        <!-- WebViewActivity -->
        <activity
            android:name=".controllers.activities.WebViewActivity"
            android:parentActivityName=".controllers.activities.MainActivity" />

        <!-- NotificationActivity -->
        <activity
            android:name=".controllers.activities.NotificationActivity"
            android:parentActivityName=".controllers.activities.MainActivity" />

        <!-- SearchActivity -->
        <activity
            android:name=".controllers.activities.SearchActivity"
            android:parentActivityName=".controllers.activities.MainActivity" />

        <!-- SearchResultActivity -->
        <activity
            android:name=".controllers.activities.SearchResultActivity"
            android:parentActivityName=".controllers.activities.SearchActivity" />

        <!-- AlarmReceiver -->
        <receiver android:name=".utils.AlarmReceiver">
            <intent-filter>
                <action android:name=".controllers.activities.NotificationActivity" />
            </intent-filter>
        </receiver>

    </application>

</manifest>